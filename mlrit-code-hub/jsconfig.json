{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "checkJs": true,
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
} 